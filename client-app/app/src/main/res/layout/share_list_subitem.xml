<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/number_picker"
        android:layout_toStartOf="@+id/number_picker"
        android:gravity="center_vertical|left"
        android:textSize="20sp"
        android:textColor="@color/material_drawer_primary_dark"/>

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/user_number_picker"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:np_textSize="18sp"
        app:np_orientation="horizontal"
        app:np_dividerColor="@color/material_drawer_primary_dark"
        app:np_min="0"
        app:np_selectedTextColor="@color/material_drawer_primary_dark"
        app:np_selectedTextSize="24sp"
        app:np_textColor="@color/material_drawer_primary"
        app:np_value="0"
        app:np_width="150dp" />
</RelativeLayout>